{% extends 'base.html.twig' %}

{% block title %}Gestion des Associations - Administration{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-heart text-primary-600 mr-3"></i>
                        Gestion des Associations
                    </h1>
                    <p class="text-gray-600 mt-2">
                        Approuvez ou rejetez les demandes d'inscription des associations
                    </p>
                </div>
                
                <div class="flex items-center space-x-4">
                    <a href="{{ path('app_admin_dashboard') }}" 
                       class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Retour au tableau de bord
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Filtres -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200 mb-8">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtres</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <select class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="">Tous les statuts</option>
                    <option value="pending">En attente</option>
                    <option value="approved">Approuvées</option>
                    <option value="rejected">Rejetées</option>
                </select>
                
                <select class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="">Toutes les régions</option>
                    <option value="ile-de-france">Île-de-France</option>
                    <option value="auvergne-rhone-alpes">Auvergne-Rhône-Alpes</option>
                    <option value="nouvelle-aquitaine">Nouvelle-Aquitaine</option>
                </select>
                
                <input type="text" placeholder="Rechercher par nom..." 
                       class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                
                <button class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                    <i class="fas fa-search mr-2"></i>
                    Filtrer
                </button>
            </div>
        </div>

        <!-- Liste des associations -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    Associations ({{ associations|length }})
                </h3>
            </div>
            
            {% if associations|length > 0 %}
                <div class="divide-y divide-gray-200">
                    {% for association in associations %}
                        <div class="p-6 hover:bg-gray-50 transition-colors">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center mb-3">
                                        <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
                                            {% if association.logo %}
                                                <img src="{{ asset('uploads/associations/' ~ association.logo) }}" 
                                                     alt="{{ association.name }}" 
                                                     class="w-12 h-12 rounded-lg object-cover">
                                            {% else %}
                                                <i class="fas fa-heart text-primary-600 text-xl"></i>
                                            {% endif %}
                                        </div>
                                        
                                        <div class="flex-1">
                                            <h4 class="text-lg font-semibold text-gray-900 mb-1">
                                                {{ association.name }}
                                            </h4>
                                            <div class="flex items-center space-x-4 text-sm text-gray-500">
                                                <span class="flex items-center">
                                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                                    {{ association.city }}, {{ association.region }}
                                                </span>
                                                <span class="flex items-center">
                                                    <i class="fas fa-calendar mr-1"></i>
                                                    Créée le {{ association.createdAt|date('d/m/Y') }}
                                                </span>
                                                <span class="flex items-center">
                                                    <i class="fas fa-envelope mr-1"></i>
                                                    {{ association.email }}
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <div class="ml-4">
                                            {% if association.isApproved %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <i class="fas fa-check-circle mr-1"></i>Approuvée
                                                </span>
                                            {% else %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    <i class="fas fa-clock mr-1"></i>En attente
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <p class="text-gray-600 mb-4">
                                        {{ association.description|length > 200 ? association.description|slice(0, 200) ~ '...' : association.description }}
                                    </p>
                                    
                                    <div class="flex flex-wrap gap-2 mb-4">
                                        {% if association.specialties is defined and association.specialties|length > 0 %}
                                            {% for specialty in association.specialties %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                                    {{ specialty }}
                                                </span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                    
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-gray-600">
                                        <div>
                                            <span class="font-medium">Statut juridique :</span>
                                            {{ association.legalStatus ?? 'Non spécifié' }}
                                        </div>
                                        <div>
                                            <span class="font-medium">Capacité max :</span>
                                            {{ association.maxCapacity ?? 'Non spécifiée' }}
                                        </div>
                                        <div>
                                            <span class="font-medium">Site web :</span>
                                            {% if association.website %}
                                                <a href="{{ association.website }}" target="_blank" class="text-primary-600 hover:text-primary-700">
                                                    {{ association.website }}
                                                </a>
                                            {% else %}
                                                Non spécifié
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="ml-6 flex flex-col space-y-2">
                                    {% if not association.isApproved %}
                                        <a href="{{ path('app_admin_association_approve', {'id': association.id}) }}" 
                                           class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors"
                                           onclick="return confirm('Êtes-vous sûr de vouloir approuver cette association ?')">
                                            <i class="fas fa-check mr-2"></i>
                                            Approuver
                                        </a>
                                        
                                        <a href="{{ path('app_admin_association_reject', {'id': association.id}) }}" 
                                           class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors"
                                           onclick="return confirm('Êtes-vous sûr de vouloir rejeter cette association ? Cette action est irréversible.')">
                                            <i class="fas fa-times mr-2"></i>
                                            Rejeter
                                        </a>
                                    {% else %}
                                        <span class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 text-sm font-medium rounded-lg">
                                            <i class="fas fa-check-circle mr-2"></i>
                                            Approuvée
                                        </span>
                                        {% if association.approvedAt %}
                                            <span class="text-xs text-gray-500 text-center">
                                                Approuvée le {{ association.approvedAt|date('d/m/Y') }}
                                            </span>
                                        {% endif %}
                                    {% endif %}
                                    
                                    <a href="#" class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors">
                                        <i class="fas fa-eye mr-2"></i>
                                        Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="p-12 text-center">
                    <div class="mx-auto h-24 w-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-heart text-gray-400 text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune association trouvée</h3>
                    <p class="text-gray-600">
                        Il n'y a actuellement aucune association à gérer.
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
