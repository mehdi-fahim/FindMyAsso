{% extends 'base.html.twig' %}

{% block title %}Gestion des Vétérinaires - Administration{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-stethoscope text-green-600 mr-3"></i>
                        Gestion des Vétérinaires
                    </h1>
                    <p class="text-gray-600 mt-2">
                        Approuvez ou rejetez les demandes d'inscription des vétérinaires
                    </p>
                </div>
                
                <div class="flex items-center space-x-4">
                    <a href="{{ path('app_admin_dashboard') }}" 
                       class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Retour au tableau de bord
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Filtres -->
        <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200 mb-8">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtres</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <select class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                    <option value="">Tous les statuts</option>
                    <option value="pending">En attente</option>
                    <option value="approved">Approuvés</option>
                    <option value="rejected">Rejetés</option>
                </select>
                
                <select class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                    <option value="">Toutes les régions</option>
                    <option value="ile-de-france">Île-de-France</option>
                    <option value="auvergne-rhone-alpes">Auvergne-Rhône-Alpes</option>
                    <option value="nouvelle-aquitaine">Nouvelle-Aquitaine</option>
                </select>
                
                <input type="text" placeholder="Rechercher par nom..." 
                       class="border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                
                <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                    <i class="fas fa-search mr-2"></i>
                    Filtrer
                </button>
            </div>
        </div>

        <!-- Liste des vétérinaires -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    Vétérinaires ({{ vetProfiles|length }})
                </h3>
            </div>
            
            {% if vetProfiles|length > 0 %}
                <div class="divide-y divide-gray-200">
                    {% for profile in vetProfiles %}
                        <div class="p-6 hover:bg-gray-50 transition-colors">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center mb-3">
                                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                                            {% if profile.photo %}
                                                <img src="{{ asset('uploads/users/' ~ profile.photo) }}" 
                                                     alt="{{ profile.fullName }}" 
                                                     class="w-12 h-12 rounded-lg object-cover">
                                            {% else %}
                                                <i class="fas fa-stethoscope text-green-600 text-xl"></i>
                                            {% endif %}
                                        </div>
                                        
                                        <div class="flex-1">
                                            <h4 class="text-lg font-semibold text-gray-900 mb-1">
                                                {{ profile.title }} {{ profile.fullName }}
                                            </h4>
                                            <div class="flex items-center space-x-4 text-sm text-gray-500">
                                                <span class="flex items-center">
                                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                                    {{ profile.city }}, {{ profile.region }}
                                                </span>
                                                <span class="flex items-center">
                                                    <i class="fas fa-calendar mr-1"></i>
                                                    Créé le {{ profile.createdAt|date('d/m/Y') }}
                                                </span>
                                                <span class="flex items-center">
                                                    <i class="fas fa-envelope mr-1"></i>
                                                    {{ profile.email }}
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <div class="ml-4">
                                            {% if profile.isApproved %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    <i class="fas fa-check-circle mr-1"></i>Approuvé
                                                </span>
                                            {% else %}
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                    <i class="fas fa-clock mr-1"></i>En attente
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-gray-600 mb-4">
                                        <div>
                                            <span class="font-medium">École :</span>
                                            {{ profile.school }}
                                        </div>
                                        <div>
                                            <span class="font-medium">Diplôme obtenu :</span>
                                            {{ profile.graduationYear }}
                                        </div>
                                        <div>
                                            <span class="font-medium">Expérience :</span>
                                            {{ profile.experience }}
                                        </div>
                                    </div>
                                    
                                    <div class="flex flex-wrap gap-2 mb-4">
                                        {% if profile.specialties is defined and profile.specialties|length > 0 %}
                                            {% for specialty in profile.specialties %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    {{ specialty }}
                                                </span>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                    
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-gray-600">
                                        <div>
                                            <span class="font-medium">Services :</span>
                                            {% if profile.services is defined and profile.services|length > 0 %}
                                                {{ profile.services|slice(0, 2)|join(', ') }}{% if profile.services|length > 2 %}...{% endif %}
                                            {% else %}
                                                Non spécifiés
                                            {% endif %}
                                        </div>
                                        <div>
                                            <span class="font-medium">Espèces traitées :</span>
                                            {% if profile.treatedSpecies is defined and profile.treatedSpecies|length > 0 %}
                                                {{ profile.treatedSpecies|slice(0, 2)|join(', ') }}{% if profile.treatedSpecies|length > 2 %}...{% endif %}
                                            {% else %}
                                                Non spécifiées
                                            {% endif %}
                                        </div>
                                        <div>
                                            <span class="font-medium">Site web :</span>
                                            {% if profile.website %}
                                                <a href="{{ profile.website }}" target="_blank" class="text-green-600 hover:text-green-700">
                                                    {{ profile.website|length > 20 ? profile.website|slice(0, 20) ~ '...' : profile.website }}
                                                </a>
                                            {% else %}
                                                Non spécifié
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    {% if profile.description %}
                                        <div class="mt-4">
                                            <span class="font-medium text-sm text-gray-700">Description :</span>
                                            <p class="text-gray-600 text-sm mt-1">
                                                {{ profile.description|length > 150 ? profile.description|slice(0, 150) ~ '...' : profile.description }}
                                            </p>
                                        </div>
                                    {% endif %}
                                    
                                    {% if profile.openingHours %}
                                        <div class="mt-4">
                                            <span class="font-medium text-sm text-gray-700">Horaires :</span>
                                            <p class="text-gray-600 text-sm mt-1 font-mono">
                                                {{ profile.openingHours|nl2br }}
                                            </p>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="ml-6 flex flex-col space-y-2">
                                    {% if not profile.isApproved %}
                                        <a href="{{ path('app_admin_veterinarian_approve', {'id': profile.id}) }}" 
                                           class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors"
                                           onclick="return confirm('Êtes-vous sûr de vouloir approuver ce vétérinaire ?')">
                                            <i class="fas fa-check mr-2"></i>
                                            Approuver
                                        </a>
                                        
                                        <a href="{{ path('app_admin_veterinarian_reject', {'id': profile.id}) }}" 
                                           class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors"
                                           onclick="return confirm('Êtes-vous sûr de vouloir rejeter ce vétérinaire ? Cette action est irréversible.')">
                                            <i class="fas fa-times mr-2"></i>
                                            Rejeter
                                        </a>
                                    {% else %}
                                        <span class="inline-flex items-center px-4 py-2 bg-green-100 text-green-800 text-sm font-medium rounded-lg">
                                            <i class="fas fa-check-circle mr-2"></i>
                                            Approuvé
                                        </span>
                                        {% if profile.approvedAt %}
                                            <span class="text-xs text-gray-500 text-center">
                                                Approuvé le {{ profile.approvedAt|date('d/m/Y') }}
                                            </span>
                                        {% endif %}
                                    {% endif %}
                                    
                                    <a href="#" class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors">
                                        <i class="fas fa-eye mr-2"></i>
                                        Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="p-12 text-center">
                    <div class="mx-auto h-24 w-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-stethoscope text-gray-400 text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun vétérinaire trouvé</h3>
                    <p class="text-gray-600">
                        Il n'y a actuellement aucun vétérinaire à gérer.
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
