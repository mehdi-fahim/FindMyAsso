{% extends 'base.html.twig' %}

{% block title %}Inscription Vétérinaire - FindMyAsso{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-50 py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="mx-auto h-16 w-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-stethoscope text-green-600 text-2xl"></i>
            </div>
            
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                Inscription Vétérinaire
            </h1>
            
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Rejoignez notre réseau de vétérinaires et présentez vos services aux familles et associations. 
                Tous les champs marqués d'un * sont obligatoires.
            </p>
        </div>

        <!-- Formulaire -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
            
            <!-- Informations personnelles -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-user text-green-500 mr-3"></i>
                    Informations personnelles
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.fullName) }}
                        {{ form_widget(form.fullName) }}
                        {{ form_errors(form.fullName) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>

            <!-- Contact -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-address-book text-green-500 mr-3"></i>
                    Informations de contact
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone) }}
                        {{ form_errors(form.phone) }}
                    </div>
                </div>
                
                <div class="mt-6">
                    {{ form_label(form.website) }}
                    {{ form_widget(form.website) }}
                    {{ form_errors(form.website) }}
                </div>
            </div>

            <!-- Localisation -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-map-marker-alt text-green-500 mr-3"></i>
                    Localisation de la clinique
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.address) }}
                        {{ form_widget(form.address) }}
                        {{ form_errors(form.address) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.city) }}
                        {{ form_widget(form.city) }}
                        {{ form_errors(form.city) }}
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                    <div>
                        {{ form_label(form.postalCode) }}
                        {{ form_widget(form.postalCode) }}
                        {{ form_errors(form.postalCode) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.region) }}
                        {{ form_widget(form.region) }}
                        {{ form_errors(form.region) }}
                    </div>
                </div>
            </div>

            <!-- Formation et diplômes -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-graduation-cap text-green-500 mr-3"></i>
                    Formation et diplômes
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.graduationYear) }}
                        {{ form_widget(form.graduationYear) }}
                        {{ form_errors(form.graduationYear) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.school) }}
                        {{ form_widget(form.school) }}
                        {{ form_errors(form.school) }}
                    </div>
                </div>
                
                <div class="mt-6">
                    {{ form_label(form.education) }}
                    {{ form_widget(form.education) }}
                    {{ form_errors(form.education) }}
                </div>
            </div>

            <!-- Spécialités -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-stethoscope text-green-500 mr-3"></i>
                    Spécialités
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.specialties) }}
                    {{ form_widget(form.specialties) }}
                    {{ form_errors(form.specialties) }}
                </div>
            </div>

            <!-- Services proposés -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-list text-green-500 mr-3"></i>
                    Services proposés
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.services) }}
                    {{ form_widget(form.services) }}
                    {{ form_errors(form.services) }}
                </div>
            </div>

            <!-- Espèces traitées -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-paw text-green-500 mr-3"></i>
                    Espèces traitées
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.treatedSpecies) }}
                    {{ form_widget(form.treatedSpecies) }}
                    {{ form_errors(form.treatedSpecies) }}
                </div>
            </div>

            <!-- Expérience professionnelle -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-briefcase text-green-500 mr-3"></i>
                    Expérience professionnelle
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.experience) }}
                    {{ form_widget(form.experience) }}
                    {{ form_errors(form.experience) }}
                </div>
            </div>

            <!-- Horaires et disponibilité -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-clock text-green-500 mr-3"></i>
                    Horaires et disponibilité
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.openingHours) }}
                    {{ form_widget(form.openingHours) }}
                    {{ form_errors(form.openingHours) }}
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                    <div class="flex items-center">
                        {{ form_widget(form.emergencyService) }}
                        {{ form_label(form.emergencyService) }}
                        {{ form_errors(form.emergencyService) }}
                    </div>
                    
                    <div class="flex items-center">
                        {{ form_widget(form.homeVisits) }}
                        {{ form_label(form.homeVisits) }}
                        {{ form_errors(form.homeVisits) }}
                    </div>
                </div>
            </div>

            <!-- Tarifs et modalités -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-euro-sign text-green-500 mr-3"></i>
                    Tarifs et modalités
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.pricing) }}
                        {{ form_widget(form.pricing) }}
                        {{ form_errors(form.pricing) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.insurance) }}
                        {{ form_widget(form.insurance) }}
                        {{ form_errors(form.insurance) }}
                    </div>
                </div>
            </div>

            <!-- Description et valeurs -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-heart text-green-500 mr-3"></i>
                    Description et valeurs
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <!-- Références et certifications -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-certificate text-green-500 mr-3"></i>
                    Références et certifications
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.certifications) }}
                        {{ form_widget(form.certifications) }}
                        {{ form_errors(form.certifications) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.references) }}
                        {{ form_widget(form.references) }}
                        {{ form_errors(form.references) }}
                    </div>
                </div>
            </div>

            <!-- Photo -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-image text-green-500 mr-3"></i>
                    Photo de profil
                </h2>
                
                <div class="mt-6">
                    {{ form_label(form.photo) }}
                    {{ form_widget(form.photo) }}
                    {{ form_errors(form.photo) }}
                    <p class="text-sm text-gray-500 mt-2">
                        Formats acceptés : JPG, PNG, GIF. Taille maximale : 2MB.
                    </p>
                </div>
            </div>

            <!-- Compte utilisateur -->
            <div class="border-b border-gray-200 pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-user text-green-500 mr-3"></i>
                    Compte utilisateur
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.userEmail) }}
                        {{ form_widget(form.userEmail) }}
                        {{ form_errors(form.userEmail) }}
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                    <div>
                        {{ form_label(form.plainPassword) }}
                        {{ form_widget(form.plainPassword) }}
                        {{ form_errors(form.plainPassword) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.confirmPassword) }}
                        {{ form_widget(form.confirmPassword) }}
                        {{ form_errors(form.confirmPassword) }}
                    </div>
                </div>
            </div>

            <!-- Conditions -->
            <div class="pb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                    <i class="fas fa-shield-alt text-green-500 mr-3"></i>
                    Conditions d'utilisation
                </h2>
                
                <div class="mt-6">
                    {{ form_widget(form.agreeTerms) }}
                    {{ form_errors(form.agreeTerms) }}
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                <button type="submit" 
                        class="flex-1 bg-green-600 hover:bg-green-700 text-white py-4 px-6 rounded-xl font-semibold transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-paper-plane mr-2"></i>
                    Envoyer la demande d'inscription
                </button>
                
                <a href="{{ path('app_register') }}" 
                   class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 py-4 px-6 rounded-xl font-semibold text-center transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Retour
                </a>
            </div>

            {{ form_end(form) }}
        </div>

        <!-- Informations supplémentaires -->
        <div class="mt-8 text-center">
            <p class="text-gray-600 mb-4">
                Vous avez déjà un compte ?
            </p>
            <a href="{{ path('app_login') }}" 
               class="inline-flex items-center px-6 py-3 bg-gray-800 hover:bg-gray-900 text-white font-medium rounded-xl transition-colors">
                <i class="fas fa-sign-in-alt mr-2"></i>
                Se connecter
            </a>
        </div>
    </div>
</div>
{% endblock %}
