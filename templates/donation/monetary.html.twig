{% extends 'base.html.twig' %}

{% block title %}Faire un Don Monétaire - FindMyAsso{% endblock %}

{% block body %}
<div class="bg-gray-50 min-h-screen">
    <!-- Header de la page -->
    <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-900 mb-4">
                    Faire un Don Monétaire
                </h1>
                <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                    Votre générosité permet de sauver des vies animales. 
                    Chaque don fait une différence.
                </p>
            </div>
        </div>
    </div>

    <!-- Formulaire de don -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Formulaire principal -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-8">
                    <h2 class="text-2xl font-semibold text-gray-900 mb-6">
                        <i class="fas fa-credit-card mr-2 text-primary-500"></i>Informations du don
                    </h2>
                    
                    {{ form_start(donationForm, {'attr': {'class': 'space-y-6'}}) }}
                        
                        <!-- Montant -->
                        <div>
                            {{ form_label(donationForm.amount, 'Montant du don (€)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="text-gray-500 sm:text-sm">€</span>
                                </div>
                                {{ form_widget(donationForm.amount, {'attr': {'class': 'pl-8 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm', 'placeholder': '0'}}) }}
                            </div>
                            {% if form_errors(donationForm.amount) %}
                                <div class="mt-1 text-sm text-red-600">
                                    {{ form_errors(donationForm.amount) }}
                                </div>
                            {% endif %}
                        </div>
                        
                        <!-- Montants suggérés -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-3">Montants suggérés</label>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                                <button type="button" onclick="setAmount(15)" class="amount-suggestion p-3 border-2 border-gray-200 rounded-lg text-center hover:border-primary-400 transition-colors">
                                    <div class="text-lg font-bold text-primary-600">15€</div>
                                    <div class="text-xs text-gray-500">Nourriture 1 jour</div>
                                </button>
                                <button type="button" onclick="setAmount(30)" class="amount-suggestion p-3 border-2 border-gray-200 rounded-lg text-center hover:border-primary-400 transition-colors">
                                    <div class="text-lg font-bold text-primary-600">30€</div>
                                    <div class="text-xs text-gray-500">Soins vétérinaires</div>
                                </button>
                                <button type="button" onclick="setAmount(50)" class="amount-suggestion p-3 border-2 border-gray-200 rounded-lg text-center hover:border-primary-400 transition-colors">
                                    <div class="text-lg font-bold text-primary-600">50€</div>
                                    <div class="text-xs text-gray-500">Stérilisation</div>
                                </button>
                                <button type="button" onclick="setAmount(100)" class="amount-suggestion p-3 border-2 border-gray-200 rounded-lg text-center hover:border-primary-400 transition-colors">
                                    <div class="text-lg font-bold text-primary-600">100€</div>
                                    <div class="text-xs text-gray-500">Urgences</div>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Devise -->
                        <div>
                            {{ form_label(donationForm.currency, 'Devise', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(donationForm.currency, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                            {% if form_errors(donationForm.currency) %}
                                <div class="mt-1 text-sm text-red-600">
                                    {{ form_errors(donationForm.currency) }}
                                </div>
                            {% endif %}
                        </div>
                        
                        <!-- Association -->
                        <div>
                            {{ form_label(donationForm.association, 'Association (optionnel)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(donationForm.association, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                            {% if form_errors(donationForm.association) %}
                                <div class="mt-1 text-sm text-red-600">
                                    {{ form_errors(donationForm.association) }}
                                </div>
                            {% endif %}
                            <p class="mt-1 text-sm text-gray-500">
                                Laissez vide pour faire un don général à FindMyAsso
                            </p>
                        </div>
                        
                        <!-- Message -->
                        <div>
                            {{ form_label(donationForm.message, 'Message (optionnel)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(donationForm.message, {'attr': {'class': 'w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm', 'rows': '4', 'placeholder': 'Un message pour l\'association ou pour nous...'}}) }}
                            {% if form_errors(donationForm.message) %}
                                <div class="mt-1 text-sm text-red-600">
                                    {{ form_errors(donationForm.message) }}
                                </div>
                            {% endif %}
                        </div>
                        
                        <!-- Bouton de soumission -->
                        <div class="pt-4">
                            <button type="submit" 
                                    class="w-full bg-primary-600 hover:bg-primary-700 text-white py-3 px-6 rounded-md font-medium transition-colors text-lg">
                                <i class="fas fa-heart mr-2"></i>Procéder au don
                            </button>
                        </div>
                        
                    {{ form_end(donationForm) }}
                </div>
            </div>
            
            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Informations sur le don -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-info-circle mr-2 text-primary-500"></i>À propos de votre don
                    </h3>
                    
                    <div class="space-y-3 text-sm text-gray-600">
                        <div class="flex items-start">
                            <i class="fas fa-check-circle text-green-500 mr-2 mt-1"></i>
                            <span>100% sécurisé avec Stripe</span>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-check-circle text-green-500 mr-2 mt-1"></i>
                            <span>Reçu fiscal déductible</span>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-check-circle text-green-500 mr-2 mt-1"></i>
                            <span>Paiement en une fois</span>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-check-circle text-green-500 mr-2 mt-1"></i>
                            <span>Confirmation immédiate</span>
                        </div>
                    </div>
                </div>
                
                <!-- Impact du don -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-chart-line mr-2 text-primary-500"></i>Impact de votre don
                    </h3>
                    
                    <div class="space-y-3">
                        <div class="text-center p-3 bg-primary-50 rounded-lg">
                            <div class="text-2xl font-bold text-primary-600" id="impact-amount">0€</div>
                            <div class="text-sm text-gray-600">Montant du don</div>
                        </div>
                        
                        <div class="text-center p-3 bg-green-50 rounded-lg">
                            <div class="text-lg font-semibold text-green-600" id="impact-deduction">0€</div>
                            <div class="text-sm text-gray-600">Déduction fiscale</div>
                        </div>
                    </div>
                </div>
                
                <!-- Sécurité -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-shield-alt mr-2 text-primary-500"></i>Sécurité
                    </h3>
                    
                    <div class="space-y-3 text-sm text-gray-600">
                        <p>
                            Vos informations de paiement sont protégées par le cryptage SSL 
                            et ne sont jamais stockées sur nos serveurs.
                        </p>
                        <div class="flex items-center space-x-2">
                            <i class="fab fa-stripe text-gray-400 text-xl"></i>
                            <span class="text-xs text-gray-500">Paiement sécurisé par Stripe</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- FAQ -->
    <div class="bg-white border-t border-gray-200">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Questions fréquentes</h2>
            </div>
            
            <div class="space-y-6">
                <div class="border border-gray-200 rounded-lg">
                    <button class="w-full px-6 py-4 text-left focus:outline-none focus:ring-2 focus:ring-primary-500" onclick="toggleFAQ(this)">
                        <div class="flex items-center justify-between">
                            <span class="font-medium text-gray-900">Mes dons sont-ils déductibles des impôts ?</span>
                            <i class="fas fa-chevron-down text-gray-500 transition-transform"></i>
                        </div>
                    </button>
                    <div class="px-6 pb-4 hidden">
                        <p class="text-gray-600">
                            Oui, vos dons sont déductibles des impôts à hauteur de 66% pour les particuliers. 
                            Vous recevrez automatiquement un reçu fiscal par email après votre don.
                        </p>
                    </div>
                </div>
                
                <div class="border border-gray-200 rounded-lg">
                    <button class="w-full px-6 py-4 text-left focus:outline-none focus:ring-2 focus:ring-primary-500" onclick="toggleFAQ(this)">
                        <div class="flex items-center justify-between">
                            <span class="font-medium text-gray-900">Comment sont utilisés mes dons ?</span>
                            <i class="fas fa-chevron-down text-gray-500 transition-transform"></i>
                        </div>
                    </button>
                    <div class="px-6 pb-4 hidden">
                        <p class="text-gray-600">
                            Si vous donnez à une association spécifique, 100% du montant lui est reversé. 
                            Pour les dons généraux, ils servent à financer le développement de la plateforme 
                            et à soutenir les associations partenaires.
                        </p>
                    </div>
                </div>
                
                <div class="border border-gray-200 rounded-lg">
                    <button class="w-full px-6 py-4 text-left focus:outline-none focus:ring-2 focus:ring-primary-500" onclick="toggleFAQ(this)">
                        <div class="flex items-center justify-between">
                            <span class="font-medium text-gray-900">Puis-je faire un don anonyme ?</span>
                            <i class="fas fa-chevron-down text-gray-500 transition-transform"></i>
                        </div>
                    </button>
                    <div class="px-6 pb-4 hidden">
                        <p class="text-gray-600">
                            Oui, vous pouvez choisir de faire un don anonyme. Dans ce cas, 
                            seule l'association recevra l'information de votre don, sans votre nom.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Mettre à jour l'impact du don
function updateImpact(amount) {
    const impactAmount = document.getElementById('impact-amount');
    const impactDeduction = document.getElementById('impact-deduction');
    
    impactAmount.textContent = amount + '€';
    impactDeduction.textContent = Math.round(amount * 0.66) + '€';
}

// Définir le montant
function setAmount(amount) {
    document.getElementById('donation_amount').value = amount;
    updateImpact(amount);
    
    // Mettre à jour l'apparence des boutons
    document.querySelectorAll('.amount-suggestion').forEach(btn => {
        btn.classList.remove('border-primary-400', 'bg-primary-50');
        btn.classList.add('border-gray-200');
    });
    
    // Mettre à jour le bouton sélectionné
    event.target.classList.remove('border-gray-200');
    event.target.classList.add('border-primary-400', 'bg-primary-50');
}

// Écouter les changements du montant
document.addEventListener('DOMContentLoaded', function() {
    const amountInput = document.getElementById('donation_amount');
    if (amountInput) {
        amountInput.addEventListener('input', function() {
            const amount = parseInt(this.value) || 0;
            updateImpact(amount);
        });
    }
    
    // Initialiser l'impact
    updateImpact(0);
});

// Toggle FAQ
function toggleFAQ(button) {
    const content = button.nextElementSibling;
    const icon = button.querySelector('i');
    
    if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
    } else {
        content.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
    }
}
</script>
{% endblock %}
