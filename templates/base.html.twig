<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}FindMyAsso - Protection Animale{% endblock %}</title>
    <meta name="description" content="{% block description %}Plateforme nationale de protection animale. Trouvez des associations, adoptez des animaux, faites des dons et participez à la protection des animaux en détresse.{% endblock %}">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts - Police manuscrite pour les titres -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#faf8f5',
                            100: '#f5f1eb',
                            200: '#e8ddd1',
                            300: '#d4c4b0',
                            400: '#b8a088',
                            500: '#9c7c5f',
                            600: '#8b6f47',
                            700: '#6b5538',
                            800: '#4a3c28',
                            900: '#2d2419',
                        },
                        neutral: {
                            50: '#fefcf9',
                            100: '#fdf8f3',
                            200: '#f9f0e6',
                            300: '#f2e4d3',
                            400: '#e8d1b8',
                            500: '#d4b896',
                            600: '#b89a73',
                            700: '#8b6f47',
                            800: '#5c4a33',
                            900: '#3d3224',
                        }
                    },
                    fontFamily: {
                        'handwriting': ['Dancing Script', 'cursive'],
                        'body': ['Inter', 'sans-serif'],
                    },
                    boxShadow: {
                        'warm': '0 4px 6px -1px rgba(139, 111, 71, 0.1), 0 2px 4px -1px rgba(139, 111, 71, 0.06)',
                    }
                }
            }
        }
    </script>
    
    <!-- Leaflet CSS pour les cartes -->

    
    <!-- Font Awesome pour les icônes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- CSS personnalisé pour les formulaires -->
    <link rel="stylesheet" href="{{ asset('css/custom-forms.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-neutral-50 min-h-screen flex flex-col font-body">
    <!-- Header -->
    <header class="bg-white shadow-warm border-b border-primary-200">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="{{ path('app_home') }}" class="flex items-center space-x-2">
                        <i class="fas fa-paw text-primary-600 text-2xl"></i>
                        <span class="text-2xl font-handwriting font-semibold text-primary-800">FindMyAsso</span>
                    </a>
                </div>

                <!-- Navigation principale -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="{{ path('app_associations') }}" class="text-neutral-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Associations
                    </a>
                    <a href="{{ path('app_fosters') }}" class="text-neutral-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Familles d'accueil
                    </a>
                    <a href="{{ path('foster_register') }}" class="text-neutral-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">
                        Devenir famille d'accueil
                    </a>
                </div>

                <!-- Actions utilisateur -->
                <div class="flex items-center space-x-4">
                    {% if app.user %}
                        <div class="relative">
                            <button type="button" class="flex items-center space-x-2 text-neutral-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors" id="user-menu-button">
                                <i class="fas fa-user-circle text-lg"></i>
                                <span>{{ app.user.fullName }}</span>
                                <i class="fas fa-chevron-down text-xs"></i>
                            </button>
                            
                            <!-- Menu déroulant utilisateur -->
                            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-warm py-1 z-50 hidden" id="user-menu">
                                <a href="{{ path('app_dashboard') }}" class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100">
                                    <i class="fas fa-tachometer-alt mr-2"></i>Tableau de bord
                                </a>
                                <a href="{{ path('app_profile') }}" class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100">
                                    <i class="fas fa-user mr-2"></i>Profil
                                </a>
                                <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100">
                                    <i class="fas fa-sign-out-alt mr-2"></i>Déconnexion
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="text-neutral-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">
                            Connexion
                        </a>
                        <a href="{{ path('app_register') }}" class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                            Inscription
                        </a>
                    {% endif %}
                </div>

                <!-- Menu mobile -->
                <div class="md:hidden">
                    <button type="button" class="text-neutral-700 hover:text-primary-600 p-2" id="mobile-menu-button">
                        <i class="fas fa-bars text-lg"></i>
                    </button>
                </div>
            </div>

            <!-- Menu mobile -->
            <div class="md:hidden hidden" id="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-primary-200">
                    <a href="{{ path('app_associations') }}" class="block px-3 py-2 text-neutral-700 hover:text-primary-600 rounded-md text-base font-medium">
                        Associations
                    </a>
                    <a href="{{ path('app_fosters') }}" class="block px-3 py-2 text-neutral-700 hover:text-primary-600 rounded-md text-base font-medium">
                        Familles d'accueil
                    </a>
                    <a href="{{ path('foster_register') }}" class="block px-3 py-2 text-neutral-700 hover:text-primary-600 rounded-md text-base font-medium">
                        Devenir famille d'accueil
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Messages flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
                <div class="rounded-md p-4 {% if label == 'success' %}bg-green-50 border border-green-200 text-green-800{% elseif label == 'error' %}bg-red-50 border border-red-200 text-red-800{% elseif label == 'warning' %}bg-yellow-50 border border-yellow-200 text-yellow-800{% else %}bg-blue-50 border border-blue-200 text-blue-800{% endif %}">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            {% if label == 'success' %}
                                <i class="fas fa-check-circle text-green-400"></i>
                            {% elseif label == 'error' %}
                                <i class="fas fa-exclamation-circle text-red-400"></i>
                            {% elseif label == 'warning' %}
                                <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                            {% else %}
                                <i class="fas fa-info-circle text-blue-400"></i>
                            {% endif %}
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium">{{ message }}</p>
                        </div>
                        <div class="ml-auto pl-3">
                            <div class="-mx-1.5 -my-1.5">
                                <button type="button" class="inline-flex rounded-md p-1.5 {% if label == 'success' %}bg-green-50 text-green-500 hover:bg-green-100{% elseif label == 'error' %}bg-red-50 text-red-500 hover:bg-red-100{% elseif label == 'warning' %}bg-yellow-50 text-yellow-500 hover:bg-yellow-100{% else %}bg-blue-50 text-blue-500 hover:bg-blue-100{% endif %}">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Contenu principal -->
    <main class="flex-grow">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-primary-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Logo et description -->
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center space-x-2 mb-4">
                        <i class="fas fa-paw text-primary-300 text-2xl"></i>
                        <span class="text-2xl font-handwriting font-semibold">FindMyAsso</span>
                    </div>
                    <p class="text-primary-200 mb-4">
                        Plateforme nationale de protection animale. Nous connectons les associations 
                        et les familles d'accueil pour sauver plus d'animaux.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-primary-300 hover:text-white transition-colors">
                            <i class="fab fa-facebook text-xl"></i>
                        </a>
                        <a href="#" class="text-primary-300 hover:text-white transition-colors">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-primary-300 hover:text-white transition-colors">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                    </div>
                </div>

                <!-- Liens rapides -->
                <div>
                    <h3 class="text-lg font-semibold mb-4 text-primary-100">Liens rapides</h3>
                    <ul class="space-y-2">
                        <li><a href="{{ path('app_associations') }}" class="text-primary-200 hover:text-white transition-colors">Associations</a></li>
                        <li><a href="{{ path('app_fosters') }}" class="text-primary-200 hover:text-white transition-colors">Familles d'accueil</a></li>
                        <li><a href="{{ path('foster_register') }}" class="text-primary-200 hover:text-white transition-colors">Devenir famille d'accueil</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h3 class="text-lg font-semibold mb-4 text-primary-100">Contact</h3>
                    <ul class="space-y-2 text-primary-200">
                        <li><i class="fas fa-envelope mr-2"></i>contact@findmyasso.fr</li>
                        <li><i class="fas fa-phone mr-2"></i>01 23 45 67 89</li>
                        <li><i class="fas fa-map-marker-alt mr-2"></i>Paris, France</li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-primary-700 mt-8 pt-8 text-center text-primary-300">
                <p>&copy; {{ "now"|date("Y") }} FindMyAsso. Tous droits réservés.</p>
            </div>
        </div>
    </footer>


    
    <!-- Import de l'application JS (via importmap ou asset mapper) -->
    <script type="module" src="{{ asset('app.js') }}"></script>

    <!-- Scripts personnalisés -->
    <script>
        // Menu utilisateur mobile
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const userMenuButton = document.getElementById('user-menu-button');
            const userMenu = document.getElementById('user-menu');

            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }

            if (userMenuButton && userMenu) {
                userMenuButton.addEventListener('click', function() {
                    userMenu.classList.toggle('hidden');
                });

                // Fermer le menu en cliquant ailleurs
                document.addEventListener('click', function(event) {
                    if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
                        userMenu.classList.add('hidden');
                    }
                });
            }

            // Fermer les messages flash
            const flashMessages = document.querySelectorAll('[class*="bg-"]');
            flashMessages.forEach(function(message) {
                const closeButton = message.querySelector('button');
                if (closeButton) {
                    closeButton.addEventListener('click', function() {
                        message.remove();
                    });
                }
            });
        });
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>
