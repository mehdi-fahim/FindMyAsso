{% extends 'base.html.twig' %}

{% block title %}Faire un don - {{ association.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_association_show', {'id': association.id}) }}" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Retour à {{ association.name }}
                    </a>
                </li>
            </ol>
        </nav>

        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- En-tête -->
            <div class="bg-gradient-to-r from-green-500 to-blue-600 p-8 text-white">
                <div class="flex items-center space-x-6">
                    {% if association.logo %}
                        <img src="{{ asset('uploads/associations/' ~ association.logo) }}" 
                             alt="{{ association.name }}" 
                             class="w-20 h-20 rounded-full object-cover border-4 border-white">
                    {% else %}
                        <div class="w-20 h-20 bg-white rounded-full border-4 border-white flex items-center justify-center">
                            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                    {% endif %}
                    
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Faire un don</h1>
                        <p class="text-xl opacity-90">Soutenez {{ association.name }} dans sa mission</p>
                    </div>
                </div>
            </div>

            <div class="p-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Informations sur l'association -->
                    <div>
                        <h2 class="text-2xl font-semibold text-gray-900 mb-6">À propos de {{ association.name }}</h2>
                        
                        {% if association.description %}
                        <div class="prose max-w-none text-gray-700 mb-6">
                            {{ association.description|raw }}
                        </div>
                        {% endif %}
                        
                        <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-green-900 mb-3">Votre don fait la différence</h3>
                            <ul class="space-y-2 text-sm text-green-800">
                                <li class="flex items-start space-x-2">
                                    <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>Soins vétérinaires pour les animaux</span>
                                </li>
                                <li class="flex items-start space-x-2">
                                    <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>Nourriture et matériel d'accueil</span>
                                </li>
                                <li class="flex items-start space-x-2">
                                    <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>Programmes d'éducation et de sensibilisation</span>
                                </li>
                                <li class="flex items-start space-x-2">
                                    <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>Maintenance des locaux et équipements</span>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-blue-900 mb-3">Informations fiscales</h3>
                            <p class="text-sm text-blue-800 mb-3">
                                Les dons à cette association peuvent être déductibles de vos impôts selon la législation en vigueur.
                            </p>
                            <p class="text-sm text-blue-800">
                                Un reçu fiscal vous sera envoyé par email après validation de votre don.
                            </p>
                        </div>
                    </div>

                    <!-- Formulaire de don -->
                    <div>
                        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Votre don</h2>
                        
                        <form class="space-y-6">
                            <!-- Montant du don -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-3">Montant du don *</label>
                                <div class="grid grid-cols-2 gap-3">
                                    <button type="button" class="donation-amount-btn p-4 border-2 border-gray-200 rounded-lg text-center hover:border-blue-500 focus:border-blue-500 focus:outline-none" data-amount="10">
                                        <span class="block text-lg font-semibold text-gray-900">10€</span>
                                        <span class="text-sm text-gray-600">Nourriture 1 jour</span>
                                    </button>
                                    <button type="button" class="donation-amount-btn p-4 border-2 border-gray-200 rounded-lg text-center hover:border-blue-500 focus:border-blue-500 focus:outline-none" data-amount="25">
                                        <span class="block text-lg font-semibold text-gray-900">25€</span>
                                        <span class="text-sm text-gray-600">Soins vétérinaires</span>
                                    </button>
                                    <button type="button" class="donation-amount-btn p-4 border-2 border-gray-200 rounded-lg text-center hover:border-blue-500 focus:border-blue-500 focus:outline-none" data-amount="50">
                                        <span class="block text-lg font-semibold text-gray-900">50€</span>
                                        <span class="text-sm text-gray-600">Nourriture 1 semaine</span>
                                    </button>
                                    <button type="button" class="donation-amount-btn p-4 border-2 border-gray-200 rounded-lg text-center hover:border-blue-500 focus:border-blue-500 focus:outline-none" data-amount="100">
                                        <span class="block text-lg font-semibold text-gray-900">100€</span>
                                        <span class="text-sm text-gray-600">Soins complets</span>
                                    </button>
                                </div>
                                
                                <div class="mt-4">
                                    <label for="customAmount" class="block text-sm font-medium text-gray-700 mb-2">Montant personnalisé</label>
                                    <div class="relative">
                                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">€</span>
                                        <input type="number" id="customAmount" name="customAmount" min="1" step="1"
                                               class="w-full pl-8 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                               placeholder="Montant de votre choix">
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Type de don -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-3">Type de don</label>
                                <div class="space-y-3">
                                    <label class="flex items-center">
                                        <input type="radio" name="donationType" value="one-time" checked
                                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                                        <span class="ml-3 text-gray-700">Don unique</span>
                                    </label>
                                    <label class="flex items-center">
                                        <input type="radio" name="donationType" value="monthly"
                                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                                        <span class="ml-3 text-gray-700">Don mensuel</span>
                                    </label>
                                </div>
                            </div>
                            
                            <!-- Informations personnelles -->
                            <div class="border-t pt-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-4">Vos informations</h3>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">Prénom *</label>
                                        <input type="text" id="firstName" name="firstName" required
                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    </div>
                                    <div>
                                        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Nom *</label>
                                        <input type="text" id="lastName" name="lastName" required
                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                    </div>
                                </div>
                                
                                <div class="mt-4">
                                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                                    <input type="email" id="email" name="email" required
                                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                </div>
                                
                                <div class="mt-4">
                                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
                                    <input type="tel" id="phone" name="phone"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                </div>
                            </div>
                            
                            <!-- Message -->
                            <div>
                                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message (optionnel)</label>
                                <textarea id="message" name="message" rows="3"
                                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                          placeholder="Un message pour l'association..."></textarea>
                            </div>
                            
                            <!-- Anonymat -->
                            <div class="flex items-center space-x-3">
                                <input type="checkbox" id="anonymous" name="anonymous"
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <label for="anonymous" class="text-sm text-gray-700">
                                    Rendre ce don anonyme
                                </label>
                            </div>
                            
                            <!-- Consentement -->
                            <div class="flex items-start space-x-3">
                                <input type="checkbox" id="consent" name="consent" required
                                       class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <label for="consent" class="text-sm text-gray-700">
                                    J'accepte que mes informations soient utilisées pour traiter mon don et je consens à recevoir un reçu fiscal. *
                                </label>
                            </div>
                            
                            <!-- Bouton de paiement -->
                            <button type="submit" 
                                    class="w-full bg-green-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-green-700 transition-colors">
                                Procéder au paiement sécurisé
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const amountBtns = document.querySelectorAll('.donation-amount-btn');
    const customAmountInput = document.getElementById('customAmount');
    
    amountBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            // Retirer la sélection précédente
            amountBtns.forEach(b => b.classList.remove('border-blue-500', 'bg-blue-50'));
            
            // Sélectionner le bouton cliqué
            this.classList.add('border-blue-500', 'bg-blue-50');
            
            // Mettre à jour le montant personnalisé
            const amount = this.dataset.amount;
            customAmountInput.value = amount;
        });
    });
    
    // Réinitialiser la sélection si l'utilisateur tape un montant personnalisé
    customAmountInput.addEventListener('input', function() {
        amountBtns.forEach(b => b.classList.remove('border-blue-500', 'bg-blue-50'));
    });
});
</script>
{% endblock %}
