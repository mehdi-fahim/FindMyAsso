{% extends 'base.html.twig' %}

{% block title %}Animaux de {{ association.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_association_show', {'id': association.id}) }}" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Retour à {{ association.name }}
                    </a>
                </li>
            </ol>
        </nav>

        <!-- En-tête -->
        <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
            <div class="flex items-center space-x-6">
                {% if association.logo %}
                    <img src="{{ asset('uploads/associations/' ~ association.logo) }}" 
                         alt="{{ association.name }}" 
                         class="w-20 h-20 rounded-full object-cover">
                {% else %}
                    <div class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center">
                        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                {% endif %}
                
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Animaux de {{ association.name }}</h1>
                    <p class="text-lg text-gray-600">{{ animals|length }} animal{{ animals|length > 1 ? 'aux' : '' }} disponible{{ animals|length > 1 ? 's' : '' }} à l'adoption</p>
                </div>
            </div>
        </div>

        {% if animals is empty %}
        <div class="bg-white rounded-lg shadow p-8 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.172 13H4"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun animal disponible</h3>
            <p class="text-gray-600">Cette association n'a actuellement aucun animal disponible à l'adoption.</p>
        </div>
        {% else %}
        <!-- Grille des animaux -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for animal in animals %}
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <!-- Photo de l'animal -->
                <div class="relative h-48">
                    {% if animal.photos is not empty %}
                        <img src="{{ asset('uploads/animals/' ~ animal.photos.first.filename) }}" 
                             alt="{{ animal.name }}" 
                             class="w-full h-full object-cover">
                    {% else %}
                        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    {% endif %}
                    
                    <!-- Badge de statut -->
                    <div class="absolute top-3 right-3">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Disponible
                        </span>
                    </div>
                </div>

                <!-- Informations de l'animal -->
                <div class="p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        <a href="{{ path('app_adoption_show', {'id': animal.id}) }}" class="hover:text-blue-600">
                            {{ animal.name }}
                        </a>
                    </h3>
                    
                    <div class="flex items-center space-x-2 mb-3">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            {{ animal.species }}
                        </span>
                        {% if animal.age %}
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                            {{ animal.age }} ans
                        </span>
                        {% endif %}
                        {% if animal.sex %}
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-pink-100 text-pink-800">
                            {{ animal.sex }}
                        </span>
                        {% endif %}
                    </div>
                    
                    {% if animal.description %}
                                                <p class="text-gray-600 text-sm mb-4" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                {{ animal.description|length > 100 ? animal.description|slice(0, 100) ~ '...' : animal.description }}
                            </p>
                    {% endif %}
                    
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-500">
                            <p>{{ association.city }}, {{ association.region }}</p>
                        </div>
                        <a href="{{ path('app_adoption_show', {'id': animal.id}) }}" 
                           class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors">
                            Voir plus
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
