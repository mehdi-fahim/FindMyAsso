{% extends 'base.html.twig' %}

{% block title %}{{ association.name }} - Association{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_associations') }}" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Retour aux associations
                    </a>
                </li>
            </ol>
        </nav>

        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- En-tête de l'association -->
            <div class="relative h-64 md:h-80">
                {% if association.banner %}
                    <img src="{{ asset('uploads/associations/' ~ association.banner) }}" 
                         alt="{{ association.name }}" 
                         class="w-full h-full object-cover">
                {% else %}
                    <div class="w-full h-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center">
                        <div class="text-center text-white">
                            <svg class="w-24 h-24 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <h1 class="text-3xl font-bold">{{ association.name }}</h1>
                        </div>
                    </div>
                {% endif %}
                
                <!-- Logo de l'association -->
                <div class="absolute bottom-4 left-4">
                    {% if association.logo %}
                        <img src="{{ asset('uploads/associations/' ~ association.logo) }}" 
                             alt="{{ association.name }}" 
                             class="w-20 h-20 rounded-full border-4 border-white shadow-lg">
                    {% else %}
                        <div class="w-20 h-20 bg-white rounded-full border-4 border-white shadow-lg flex items-center justify-center">
                            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="p-8">
                <!-- Informations principales -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">{{ association.name }}</h1>
                    
                    <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-6">
                        {% if association.city %}
                        <div class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            {{ association.city }}{% if association.region %}, {{ association.region }}{% endif %}
                        </div>
                        {% endif %}
                        
                        {% if association.phone %}
                        <div class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            {{ association.phone }}
                        </div>
                        {% endif %}
                        
                        {% if association.email %}
                        <div class="flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            {{ association.email }}
                        </div>
                        {% endif %}
                    </div>

                    <!-- Tags -->
                    <div class="flex flex-wrap gap-2">
                        {% if association.species %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            {{ association.species }}
                        </span>
                        {% endif %}
                        
                        {% if association.region %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            {{ association.region }}
                        </span>
                        {% endif %}
                        
                        {% if association.isApproved %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            Vérifiée
                        </span>
                        {% endif %}
                    </div>
                </div>

                <!-- Description -->
                {% if association.description %}
                <div class="mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">À propos de l'association</h2>
                    <div class="prose max-w-none text-gray-700">
                        {{ association.description|raw }}
                    </div>
                </div>
                {% endif %}

                <!-- Statistiques -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <div class="bg-blue-50 p-6 rounded-lg text-center">
                        <div class="text-2xl font-bold text-blue-600 mb-2">
                            {{ association.animals|length }}
                        </div>
                        <div class="text-sm text-blue-800">Animaux disponibles</div>
                    </div>
                    
                    <div class="bg-green-50 p-6 rounded-lg text-center">
                        <div class="text-2xl font-bold text-green-600 mb-2">
                            {{ association.adoptionRequests|length }}
                        </div>
                        <div class="text-sm text-green-800">Demandes d'adoption</div>
                    </div>
                    
                    <div class="bg-purple-50 p-6 rounded-lg text-center">
                        <div class="text-2xl font-bold text-purple-600 mb-2">
                            {{ association.donations|length }}
                        </div>
                        <div class="text-sm text-purple-800">Donations reçues</div>
                    </div>
                    
                    <div class="bg-orange-50 p-6 rounded-lg text-center">
                        <div class="text-2xl font-bold text-orange-600 mb-2">
                            {{ association.shelterCapacity ? association.shelterCapacity.capacity : 'N/A' }}
                        </div>
                        <div class="text-sm text-orange-800">Capacité d'accueil</div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex flex-wrap gap-4 mb-8">
                    <a href="{{ path('app_association_animals', {'id': association.id}) }}" 
                       class="bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                        Voir les animaux
                    </a>
                    
                    <a href="{{ path('app_association_contact', {'id': association.id}) }}" 
                       class="border border-blue-600 text-blue-600 px-6 py-3 rounded-lg font-medium hover:bg-blue-50 transition-colors">
                        Contacter
                    </a>
                    
                    <a href="{{ path('app_association_donate', {'id': association.id}) }}" 
                       class="bg-green-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-green-700 transition-colors">
                        Faire un don
                    </a>
                </div>

                <!-- Horaires et informations pratiques -->
                {% if association.openingHours or association.address %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                    {% if association.address %}
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Adresse</h3>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-gray-700">{{ association.address }}</p>
                            <p class="text-gray-700">{{ association.postalCode }} {{ association.city }}</p>
                            {% if association.region %}
                            <p class="text-gray-700">{{ association.region }}</p>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if association.openingHours %}
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Horaires d'ouverture</h3>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <div class="text-gray-700">{{ association.openingHours|raw }}</div>
                        </div>
                    </div>
                    {% endif %}
                </div>
                {% endif %}

                <!-- Réseaux sociaux -->
                {% if association.website or association.facebook or association.instagram %}
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Suivez-nous</h3>
                    <div class="flex space-x-4">
                        {% if association.website %}
                        <a href="{{ association.website }}" target="_blank" rel="noopener noreferrer"
                           class="text-gray-600 hover:text-blue-600 transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c1.93 1.19 3.27 3.22 3.27 5.41 0 2.65-1.88 4.87-4.37 5.42z"/>
                            </svg>
                        </a>
                        {% endif %}
                        
                        {% if association.facebook %}
                        <a href="{{ association.facebook }}" target="_blank" rel="noopener noreferrer"
                           class="text-gray-600 hover:text-blue-600 transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </a>
                        {% endif %}
                        
                        {% if association.instagram %}
                        <a href="{{ association.instagram }}" target="_blank" rel="noopener noreferrer"
                           class="text-gray-600 hover:text-pink-600 transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.718-1.297c-.875.807-2.026 1.297-3.323 1.297s-2.448-.49-3.323-1.297c-.928-.875-1.418-2.026-1.418-3.323s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.323z"/>
                            </svg>
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
