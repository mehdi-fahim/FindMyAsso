{% extends 'base.html.twig' %}

{% block title %}{{ animal.name }} - Adoption{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_adoptions') }}" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Retour aux adoptions
                    </a>
                </li>
            </ol>
        </nav>

        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="md:flex">
                <!-- Photos de l'animal -->
                <div class="md:w-1/2">
                    <div class="relative h-96 md:h-full">
                        {% if animal.photos is not empty %}
                            <img src="{{ asset('uploads/animals/' ~ animal.photos.first.filename) }}" 
                                 alt="{{ animal.name }}" 
                                 class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                                <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Informations de l'animal -->
                <div class="md:w-1/2 p-8">
                    <div class="mb-6">
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ animal.name }}</h1>
                        <div class="flex items-center space-x-4 text-sm text-gray-600 mb-4">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                {{ animal.species }}
                            </span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                {{ animal.size }}
                            </span>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                {{ animal.sex }}
                            </span>
                        </div>
                    </div>

                    <div class="space-y-4 mb-8">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Description</h3>
                            <p class="text-gray-700">{{ animal.description|default('Aucune description disponible') }}</p>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <h4 class="font-medium text-gray-900">Âge</h4>
                                <p class="text-gray-600">{{ animal.age|default('Non spécifié') }} ans</p>
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-900">Poids</h4>
                                <p class="text-gray-600">{{ animal.weight|default('Non spécifié') }} kg</p>
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-900">Couleur</h4>
                                <p class="text-gray-600">{{ animal.color|default('Non spécifié') }}</p>
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-900">Statut</h4>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                    {% if animal.status == 'disponible' %}bg-green-100 text-green-800
                                    {% elseif animal.status == 'adopté' %}bg-red-100 text-red-800
                                    {% else %}bg-yellow-100 text-yellow-800{% endif %}">
                                    {{ animal.status|default('Non spécifié') }}
                                </span>
                            </div>
                        </div>

                        {% if animal.medicalInfo %}
                        <div>
                            <h4 class="font-medium text-gray-900">Informations médicales</h4>
                            <p class="text-gray-600">{{ animal.medicalInfo }}</p>
                        </div>
                        {% endif %}
                    </div>

                    <!-- Association -->
                    {% if animal.association %}
                    <div class="border-t pt-6 mb-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Association</h3>
                        <div class="flex items-center space-x-3">
                            {% if animal.association.logo %}
                                <img src="{{ asset('uploads/associations/' ~ animal.association.logo) }}" 
                                     alt="{{ animal.association.name }}" 
                                     class="w-12 h-12 rounded-full object-cover">
                            {% else %}
                                <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                </div>
                            {% endif %}
                            <div>
                                <h4 class="font-medium text-gray-900">{{ animal.association.name }}</h4>
                                <p class="text-sm text-gray-600">{{ animal.association.city }}, {{ animal.association.region }}</p>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Boutons d'action -->
                    <div class="flex space-x-4">
                        {% if animal.status == 'disponible' %}
                            <a href="{{ path('app_adoption_request', {'animalId': animal.id}) }}" 
                               class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors text-center">
                                Demander l'adoption
                            </a>
                        {% else %}
                            <button disabled class="flex-1 bg-gray-400 text-white px-6 py-3 rounded-lg font-medium cursor-not-allowed">
                                Non disponible
                            </button>
                        {% endif %}
                        
                        <button class="px-4 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Galerie de photos -->
        {% if animal.photos|length > 1 %}
        <div class="mt-12">
            <h3 class="text-xl font-semibold text-gray-900 mb-6">Galerie photos</h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {% for photo in animal.photos %}
                    <div class="aspect-square rounded-lg overflow-hidden">
                        <img src="{{ asset('uploads/animals/' ~ photo.filename) }}" 
                             alt="{{ animal.name }}" 
                             class="w-full h-full object-cover hover:scale-105 transition-transform cursor-pointer">
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
