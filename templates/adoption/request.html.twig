{% extends 'base.html.twig' %}

{% block title %}Demande d'adoption - {{ animal.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_adoption_show', {'id': animal.id}) }}" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Retour à {{ animal.name }}
                    </a>
                </li>
            </ol>
        </nav>

        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- En-tête avec photo de l'animal -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-8 text-white">
                <div class="flex items-center space-x-6">
                    {% if animal.photos is not empty %}
                        <img src="{{ asset('uploads/animals/' ~ animal.photos.first.filename) }}" 
                             alt="{{ animal.name }}" 
                             class="w-24 h-24 rounded-full object-cover border-4 border-white">
                    {% else %}
                        <div class="w-24 h-24 bg-white rounded-full border-4 border-white flex items-center justify-center">
                            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    {% endif %}
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Demande d'adoption</h1>
                        <p class="text-xl opacity-90">Pour {{ animal.name }}, {{ animal.species|lower }} {{ animal.age ? animal.age ~ ' ans' : '' }}</p>
                    </div>
                </div>
            </div>

            <div class="p-8">
                <!-- Informations importantes -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
                    <h2 class="text-lg font-semibold text-blue-900 mb-3">Informations importantes</h2>
                    <ul class="space-y-2 text-sm text-blue-800">
                        <li class="flex items-start space-x-2">
                            <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Cette demande sera transmise à l'association qui gère {{ animal.name }}</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Vous recevrez une réponse sous 48-72h</span>
                        </li>
                        <li class="flex items-start space-x-2">
                            <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                            <span>L'adoption est un engagement à long terme, réfléchissez bien à votre décision</span>
                        </li>
                    </ul>
                </div>

                <!-- Formulaire -->
                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                
                <!-- Informations personnelles -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Informations personnelles</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div>
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                        <div>
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div>
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>
                </div>

                <!-- Adresse -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Adresse</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="md:col-span-2">
                            {{ form_label(form.address) }}
                            {{ form_widget(form.address, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.address) }}
                        </div>
                        <div>
                            {{ form_label(form.postalCode) }}
                            {{ form_widget(form.postalCode, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.postalCode) }}
                        </div>
                        <div>
                            {{ form_label(form.city) }}
                            {{ form_widget(form.city, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.city) }}
                        </div>
                        <div>
                            {{ form_label(form.region) }}
                            {{ form_widget(form.region, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.region) }}
                        </div>
                    </div>
                </div>

                <!-- Conditions d'accueil -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Conditions d'accueil</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.homeType) }}
                            {{ form_widget(form.homeType, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.homeType) }}
                        </div>
                        <div>
                            {{ form_label(form.garden) }}
                            {{ form_widget(form.garden, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.garden) }}
                        </div>
                        <div>
                            {{ form_label(form.children) }}
                            {{ form_widget(form.children, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.children) }}
                        </div>
                        <div>
                            {{ form_label(form.experience) }}
                            {{ form_widget(form.experience, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.experience) }}
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        {{ form_label(form.otherAnimals) }}
                        {{ form_widget(form.otherAnimals, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.otherAnimals) }}
                    </div>
                </div>

                <!-- Motivation et mode de vie -->
                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">Motivation et mode de vie</h3>
                    <div class="space-y-4">
                        <div>
                            {{ form_label(form.motivation) }}
                            {{ form_widget(form.motivation, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.motivation) }}
                        </div>
                        
                        <div>
                            {{ form_label(form.lifestyle) }}
                            {{ form_widget(form.lifestyle, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.lifestyle) }}
                        </div>
                        
                        <div>
                            {{ form_label(form.budget) }}
                            {{ form_widget(form.budget, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                            {{ form_errors(form.budget) }}
                        </div>
                    </div>
                </div>

                <!-- Consentement -->
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
                    <div class="flex items-start space-x-3">
                        {{ form_widget(form.consent, {'attr': {'class': 'mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
                        <div>
                            {{ form_label(form.consent, null, {'label_attr': {'class': 'text-sm text-yellow-800 font-medium'}}) }}
                            {{ form_errors(form.consent) }}
                        </div>
                    </div>
                </div>

                <!-- Boutons -->
                <div class="flex justify-end space-x-4 pt-6">
                    <a href="{{ path('app_adoption_show', {'id': animal.id}) }}" 
                       class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="px-8 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
                        Envoyer ma demande
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
