{% extends 'base.html.twig' %}

{% block title %}Mes demandes d'adoption{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Mes demandes d'adoption</h1>
            <p class="mt-2 text-gray-600">Suivez l'état de vos demandes d'adoption</p>
        </div>

        {% if requests is empty %}
        <div class="bg-white rounded-lg shadow p-8 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune demande d'adoption</h3>
            <p class="text-gray-600 mb-6">Vous n'avez pas encore fait de demande d'adoption.</p>
            <a href="{{ path('app_adoptions') }}" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                Découvrir des animaux
            </a>
        </div>
        {% else %}
        <div class="grid gap-6">
            {% for request in requests %}
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="p-6">
                    <div class="flex items-start justify-between">
                        <div class="flex items-center space-x-4">
                            {% if request.animal.photos is not empty %}
                                <img src="{{ asset('uploads/animals/' ~ request.animal.photos.first.filename) }}" 
                                     alt="{{ request.animal.name }}" 
                                     class="w-16 h-16 rounded-lg object-cover">
                            {% else %}
                                <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            {% endif %}
                            
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900">
                                    <a href="{{ path('app_adoption_show', {'id': request.animal.id}) }}" class="hover:text-blue-600">
                                        {{ request.animal.name }}
                                    </a>
                                </h3>
                                <p class="text-sm text-gray-600">{{ request.animal.species }} • {{ request.animal.age ? request.animal.age ~ ' ans' : 'Âge non spécifié' }}</p>
                                <p class="text-sm text-gray-500">{{ request.animal.association.name }}</p>
                            </div>
                        </div>
                        
                        <div class="text-right">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {% if request.status == 'en_attente' %}bg-yellow-100 text-yellow-800
                                {% elseif request.status == 'acceptée' %}bg-green-100 text-green-800
                                {% elseif request.status == 'refusée' %}bg-red-100 text-red-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {% if request.status == 'en_attente' %}En attente
                                {% elseif request.status == 'acceptée' %}Acceptée
                                {% elseif request.status == 'refusée' %}Refusée
                                {% else %}{{ request.status }}{% endif %}
                            </span>
                            <p class="text-xs text-gray-500 mt-1">{{ request.requestDate|date('d/m/Y') }}</p>
                        </div>
                    </div>
                    
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                            <div>
                                <span class="font-medium text-gray-700">Motivation :</span>
                                <p class="text-gray-600 mt-1">{{ request.motivation|length > 100 ? request.motivation|slice(0, 100) ~ '...' : request.motivation }}</p>
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">Logement :</span>
                                <p class="text-gray-600 mt-1">{{ request.homeType|capitalize }}{% if request.garden %} • {{ request.garden }}{% endif %}</p>
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">Budget :</span>
                                <p class="text-gray-600 mt-1">
                                    {% if request.budget == 'moins_50' %}Moins de 50€
                                    {% elseif request.budget == '50_100' %}50€ - 100€
                                    {% elseif request.budget == '100_200' %}100€ - 200€
                                    {% elseif request.budget == 'plus_200' %}Plus de 200€
                                    {% else %}{{ request.budget }}{% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4 flex justify-end space-x-3">
                        <a href="{{ path('app_adoption_request_show', {'id': request.id}) }}" 
                           class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                            Voir les détails
                        </a>
                        {% if request.status == 'en_attente' %}
                        <a href="{{ path('app_adoption_show', {'id': request.animal.id}) }}" 
                           class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                            Voir l'animal
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
