{% extends 'base.html.twig' %}

{% block title %}Détails de la demande d'adoption{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="flex mb-8" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="{{ path('app_my_adoption_requests') }}" class="text-gray-700 hover:text-blue-600">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Retour à mes demandes
                    </a>
                </li>
            </ol>
        </nav>

        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- En-tête -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-8 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Demande d'adoption</h1>
                        <p class="text-xl opacity-90">Pour {{ adoptionRequest.animal.name }}</p>
                    </div>
                    <div class="text-right">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white bg-opacity-20 text-white">
                            {% if adoptionRequest.status == 'en_attente' %}En attente
                            {% elseif adoptionRequest.status == 'acceptée' %}Acceptée
                            {% elseif adoptionRequest.status == 'refusée' %}Refusée
                            {% else %}{{ adoptionRequest.status }}{% endif %}
                        </span>
                        <p class="text-sm opacity-90 mt-1">Demande du {{ adoptionRequest.requestDate|date('d/m/Y') }}</p>
                    </div>
                </div>
            </div>

            <div class="p-8">
                <!-- Informations sur l'animal -->
                <div class="bg-gray-50 p-6 rounded-lg mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Animal concerné</h2>
                    <div class="flex items-center space-x-4">
                        {% if adoptionRequest.animal.photos is not empty %}
                            <img src="{{ asset('uploads/animals/' ~ adoptionRequest.animal.photos.first.filename) }}" 
                                 alt="{{ adoptionRequest.animal.name }}" 
                                 class="w-20 h-20 rounded-lg object-cover">
                        {% else %}
                            <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center">
                                <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        {% endif %}
                        
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">
                                <a href="{{ path('app_adoption_show', {'id': adoptionRequest.animal.id}) }}" class="hover:text-blue-600">
                                    {{ adoptionRequest.animal.name }}
                                </a>
                            </h3>
                            <p class="text-gray-600">{{ adoptionRequest.animal.species }} • {{ adoptionRequest.animal.age ? adoptionRequest.animal.age ~ ' ans' : 'Âge non spécifié' }}</p>
                            <p class="text-gray-500">{{ adoptionRequest.animal.association.name }}</p>
                        </div>
                    </div>
                </div>

                <!-- Informations personnelles -->
                <div class="bg-gray-50 p-6 rounded-lg mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Informations personnelles</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <span class="font-medium text-gray-700">Nom complet :</span>
                            <p class="text-gray-600">{{ adoptionRequest.firstName }} {{ adoptionRequest.lastName }}</p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Email :</span>
                            <p class="text-gray-600">{{ adoptionRequest.email }}</p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Téléphone :</span>
                            <p class="text-gray-600">{{ adoptionRequest.phone }}</p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Adresse :</span>
                            <p class="text-gray-600">{{ adoptionRequest.address }}</p>
                            <p class="text-gray-600">{{ adoptionRequest.postalCode }} {{ adoptionRequest.city }}</p>
                            <p class="text-gray-600">{{ adoptionRequest.region }}</p>
                        </div>
                    </div>
                </div>

                <!-- Conditions d'accueil -->
                <div class="bg-gray-50 p-6 rounded-lg mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Conditions d'accueil</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <span class="font-medium text-gray-700">Type de logement :</span>
                            <p class="text-gray-600">{{ adoptionRequest.homeType|capitalize }}</p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Jardin/Extérieur :</span>
                            <p class="text-gray-600">
                                {% if adoptionRequest.garden == 'oui' %}Oui, jardin clôturé
                                {% elseif adoptionRequest.garden == 'partiel' %}Oui, partiellement clôturé
                                {% elseif adoptionRequest.garden == 'non' %}Non
                                {% else %}{{ adoptionRequest.garden }}{% endif %}
                            </p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Enfants :</span>
                            <p class="text-gray-600">
                                {% if adoptionRequest.children == 'aucun' %}Aucun
                                {% elseif adoptionRequest.children == '0-3' %}0-3 ans
                                {% elseif adoptionRequest.children == '4-12' %}4-12 ans
                                {% elseif adoptionRequest.children == '13+' %}13+ ans
                                {% else %}{{ adoptionRequest.children }}{% endif %}
                            </p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Expérience :</span>
                            <p class="text-gray-600">
                                {% if adoptionRequest.experience == 'debutant' %}Débutant
                                {% elseif adoptionRequest.experience == 'intermediaire' %}Intermédiaire
                                {% elseif adoptionRequest.experience == 'expert' %}Expert
                                {% else %}{{ adoptionRequest.experience }}{% endif %}
                            </p>
                        </div>
                    </div>
                    
                    {% if adoptionRequest.otherAnimals %}
                    <div class="mt-4">
                        <span class="font-medium text-gray-700">Autres animaux à la maison :</span>
                        <p class="text-gray-600 mt-1">{{ adoptionRequest.otherAnimals }}</p>
                    </div>
                    {% endif %}
                </div>

                <!-- Motivation et mode de vie -->
                <div class="bg-gray-50 p-6 rounded-lg mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Motivation et mode de vie</h2>
                    <div class="space-y-4">
                        <div>
                            <span class="font-medium text-gray-700">Motivation pour l'adoption :</span>
                            <p class="text-gray-600 mt-1">{{ adoptionRequest.motivation }}</p>
                        </div>
                        
                        <div>
                            <span class="font-medium text-gray-700">Mode de vie et disponibilité :</span>
                            <p class="text-gray-600 mt-1">{{ adoptionRequest.lifestyle }}</p>
                        </div>
                        
                        <div>
                            <span class="font-medium text-gray-700">Budget mensuel :</span>
                            <p class="text-gray-600 mt-1">
                                {% if adoptionRequest.budget == 'moins_50' %}Moins de 50€
                                {% elseif adoptionRequest.budget == '50_100' %}50€ - 100€
                                {% elseif adoptionRequest.budget == '100_200' %}100€ - 200€
                                {% elseif adoptionRequest.budget == 'plus_200' %}Plus de 200€
                                {% else %}{{ adoptionRequest.budget }}{% endif %}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Statut et suivi -->
                {% if adoptionRequest.status != 'en_attente' %}
                <div class="bg-gray-50 p-6 rounded-lg mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Suivi de la demande</h2>
                    <div class="space-y-4">
                        {% if adoptionRequest.status == 'acceptée' %}
                        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-green-800 font-medium">Demande acceptée</span>
                            </div>
                            <p class="text-green-700 mt-2">Félicitations ! Votre demande d'adoption a été acceptée. L'association vous contactera prochainement pour organiser la suite.</p>
                        </div>
                        {% elseif adoptionRequest.status == 'refusée' %}
                        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-red-800 font-medium">Demande refusée</span>
                            </div>
                            <p class="text-red-700 mt-2">Votre demande d'adoption n'a pas pu être acceptée. N'hésitez pas à consulter d'autres animaux disponibles.</p>
                        </div>
                        {% endif %}
                        
                        {% if adoptionRequest.responseDate %}
                        <div>
                            <span class="font-medium text-gray-700">Date de réponse :</span>
                            <p class="text-gray-600">{{ adoptionRequest.responseDate|date('d/m/Y') }}</p>
                        </div>
                        {% endif %}
                        
                        {% if adoptionRequest.responseMessage %}
                        <div>
                            <span class="font-medium text-gray-700">Message de l'association :</span>
                            <p class="text-gray-600 mt-1">{{ adoptionRequest.responseMessage }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}

                <!-- Actions -->
                <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('app_adoption_show', {'id': adoptionRequest.animal.id}) }}" 
                       class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                        Voir l'animal
                    </a>
                    
                    {% if adoptionRequest.status == 'en_attente' %}
                    <a href="{{ path('app_adoptions') }}" 
                       class="px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
                        Découvrir d'autres animaux
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
