{
  "name": "findmyasso",
  "version": "1.0.0",
  "description": "Plateforme de protection animale",
  "scripts": {
    "dev": "npm run watch",
    "build": "tailwindcss -i ./assets/styles/app.css -o ./public/styles/app.css --minify",
    "watch": "tailwindcss -i ./assets/styles/app.css -o ./public/styles/app.css --watch",
    "build:css": "tailwindcss -i ./assets/styles/app.css -o ./public/styles/app.css --minify",
    "build:js": "esbuild assets/app.js --bundle --outfile=public/app.js --minify",
    "build:all": "npm run build:css && npm run build:js"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.25.9",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "keywords": [
    "symfony",
    "tailwindcss",
    "protection-animale",
    "adoption"
  ],
  "author": "FindMyAsso Team",
  "license": "MIT"
}
